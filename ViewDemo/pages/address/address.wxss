/* pages/address/address.wxss */
.addressList{
  margin-top: 20rpx;
  position: relative;
}
.contanier{
  margin-left: 32rpx;
  margin-right: 32rpx;
  display: flex;
  background: #fff;
  height: 120rpx;
  border-radius: 12rpx;
  padding-left: 20rpx;
  padding-top: 20rpx;
  padding-bottom: 20rpx;
}
.addressItem{
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.iconStyle{
  margin-top: 10rpx;
  color: rgba(255,191,52,1);
  font-size: 32rpx;
}
.textStyle{
  margin-left: 20rpx;
  font-size: 28rpx;
}
.text-edit{
  color: #808080;
  font-size: 28rpx;
  margin-right: 20rpx;
}
.top{
  display: flex;
  direction: row;
  justify-content: space-between
}
.add{
  width: 100%;
  display: flex;
  flex-direction: row;
  position: absolute;
  bottom: 0rpx;
  height: 80rpx;
  background:#fff;
  align-items: center;
  justify-content: center;
}
.addAddress{
  font-size: 30rpx;
  color:  #1CD39B
}